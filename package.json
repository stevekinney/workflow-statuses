{
  "name": "temporal-hello-world",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "tsc --build",
    "build.watch": "tsc --build --watch",
    "start": "concurrently -n worker,client -c blue,green \"npm run start:worker\" \"npm run start:workflow\"",
    "start:worker": "esno src/worker.ts",
    "start:workflow": "esno src/client.ts",
    "dev": "concurrently \"npm run build.watch\" \"nodemon --watch dist/ --delay 1 dist/worker.js\"",
    "workflow": "esno src/client.ts"
  },
  "nodemonConfig": {
    "execMap": {
      "ts": "esno"
    },
    "ext": "ts",
    "watch": [
      "src"
    ]
  },
  "dependencies": {
    "@temporalio/activity": "^1.11.7",
    "@temporalio/client": "^1.11.7",
    "@temporalio/worker": "^1.11.7",
    "@temporalio/workflow": "^1.11.7",
    "nanoid": "5.x"
  },
  "devDependencies": {
    "@digitak/esrun": "^3.2.26",
    "@tsconfig/node18": "^18.2.4",
    "@types/node": "^22.14.1",
    "@typescript-eslint/eslint-plugin": "^8.30.1",
    "@typescript-eslint/parser": "^8.30.1",
    "concurrently": "^9.1.2",
    "dotenv": "^16.5.0",
    "esno": "^4.8.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.3",
    "typescript": "^5.8.3"
  }
}
